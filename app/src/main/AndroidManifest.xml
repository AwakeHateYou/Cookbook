<?xml version="1.0" encoding="utf-8"?>
<manifest package="io.home.awake.cookbook"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.CookbookActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.RecipeEditorActivity"
            android:label="@string/recipe_editor">
        </activity>
        <activity
            android:name=".ui.CookbookHelperActivity"
            android:label="@string/cook_helper">
        </activity>
    </application>

</manifest>